<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.superpeer.tutuyoudian.activity.setting.StoreSettingActivity">

    <include layout="@layout/base_title"/>

    <LinearLayout
        android:id="@+id/linearStoreOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_store_send"/>

        <TextView
            style="@style/textGrey3Style14"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="店铺配送订单"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearNoticeSet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_notice_setting"/>

        <TextView
            android:id="@+id/tvNoticeSet"
            style="@style/textGrey3Style14"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="店铺公告设置"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearStoreInfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_store_infos"/>

        <TextView
            android:id="@+id/tvStoreInfo"
            style="@style/textGrey3Style14"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="店铺基本信息"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearStoreSend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_send"/>

        <TextView
            android:id="@+id/tvSendInfo"
            style="@style/textGrey3Style14"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="配送信息设置"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearStoreSetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_store_apply"/>

        <TextView
            android:id="@+id/tvSetting"
            style="@style/textGrey3Style14"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="店铺入驻信息设置"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDriver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_store_runner"/>

        <TextView
            style="@style/textGrey3Style14"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="店铺跑腿"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearSafeSetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_safe"/>

        <TextView
            style="@style/textGrey3Style14"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="安全设置"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearStoreUse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_store_use"/>

        <TextView
            android:id="@+id/tvStoreUse"
            style="@style/textGrey3Style14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:text="兔兔服务到期时间" />

        <TextView
            android:id="@+id/tvToUse"
            style="@style/textGrey9Style14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearStoreInvite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_store_use"/>

        <TextView
            android:id="@+id/tvStoreInvite"
            style="@style/textGrey3Style14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:text="我的邀请码" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvExit"
        style="@style/textWhiteStyle14"
        android:text="退出登录"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/bg_orange"/>

</LinearLayout>
