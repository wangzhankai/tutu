<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear"
    android:background="@color/backgroundLight"
    tools:context="com.superpeer.tutuyoudian.activity.addaccount.AddAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/base_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:visibility="gone"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                style="@style/textGrey3Style14"
                android:text="结算方式"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etName"
                android:hint="请输入营业执照上的名称"
                style="@style/textGrey3Style14"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--<TextView
            android:text="微信"
            style="@style/textGrey3Style14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivBindWeixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_bind_wx"/>

        </LinearLayout>-->

        <TextView
            android:text="银行卡"
            style="@style/textGrey3Style14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <EditText
                android:id="@+id/etCard"
                style="@style/textGrey3Style14"
                android:background="@null"
                android:hint="请输入银行卡号"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <EditText
                android:id="@+id/etUserName"
                style="@style/textGrey3Style14"
                android:background="@null"
                android:hint="请输入开户名"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <TextView
                android:id="@+id/tvBank"
                style="@style/textGrey3Style14"
                android:background="@null"
                android:hint="请选择银行"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/iv_arrow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <TextView
                android:id="@+id/tvType"
                style="@style/textGrey3Style14"
                android:background="@null"
                android:hint="请选择账户类型"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/iv_arrow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <TextView
                android:id="@+id/tvCity"
                style="@style/textGrey3Style14"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请选择开户行所在城市"
                android:drawableRight="@mipmap/iv_arrow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <TextView
                android:id="@+id/tvCityBank"
                style="@style/textGrey3Style14"
                android:background="@null"
                android:hint="请选择分支行"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/iv_arrow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tvQuit"
            style="@style/textWhiteStyle14"
            android:background="@color/hintColor"
            android:text="取消"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvSure"
            style="@style/textWhiteStyle14"
            android:background="@color/colorPrimary"
            android:text="确定"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>


</RelativeLayout>
