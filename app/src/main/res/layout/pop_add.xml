<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_35">

        <TextView
            android:id="@+id/tvShopSelect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="商品库选择"
            android:drawableTop="@mipmap/iv_shop_select"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvScan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="扫码上传"
            android:drawableTop="@mipmap/iv_shop_upload"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvUpload"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="本地上传"
            android:drawableTop="@mipmap/iv_shop_scan"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/greyD8"/>

    <TextView
        android:id="@+id/tvCancel"
        style="@style/textGrey3Style18"
        android:text="取消"
        android:padding="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

</LinearLayout>
