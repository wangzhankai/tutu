<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.superpeer.tutuyoudian.activity.collageadd.AddCollageActivity">

    <include layout="@layout/base_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:text="拼团商品" />

                <TextView
                    android:id="@+id/tvStoreName"
                    style="@style/textGrey9Style14"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/iv_arrow"
                    android:hint="请选择商品" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="拼团标题"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etTitle"
                    android:textColorHint="@color/grey9"
                    android:hint="请输入拼团标题"
                    android:background="@null"
                    style="@style/textGrey9Style14"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dp_35"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="拼团说明"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etDesc"
                    style="@style/textGrey9Style14"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="如：配送时间、自提点等"
                    android:textColorHint="@color/grey9" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:text="总价" />

                <EditText
                    android:id="@+id/etOrignPrice"
                    android:textColorHint="@color/grey9"
                    android:hint="单位（元）"
                    android:background="@null"
                    style="@style/textGrey9Style14"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:gravity="right|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_35" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="拼团价"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etCollagePrice"
                    style="@style/textGrey9Style14"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="单位（元）"
                    android:textColorHint="@color/grey9" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:text="可开团数" />

                <EditText
                    android:id="@+id/etCollageNum"
                    android:textColorHint="@color/grey9"
                    android:hint="请输入参与拼团的商品数量"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="right|center_vertical"
                    android:background="@null"
                    style="@style/textGrey9Style14"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="每单商品数"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etGoodsNum"
                    android:textColorHint="@color/grey9"
                    android:hint="请输入每单的商品数量"
                    android:background="@null"
                    style="@style/textGrey9Style14"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="right|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="成团人数"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etPeopleNum"
                    android:textColorHint="@color/grey9"
                    android:hint="单位（人）"
                    android:background="@null"
                    style="@style/textGrey9Style14"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="收货方式"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/linearSelf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivSelf"
                        android:src="@mipmap/iv_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvSelf"
                        android:text="自提"
                        android:layout_marginLeft="@dimen/dp_10"
                        style="@style/textGrey9Style14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivSend"
                        android:src="@mipmap/iv_noselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvSend"
                        android:text="送货上门"
                        android:layout_marginLeft="@dimen/dp_10"
                        style="@style/textGrey9Style14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="拼团持续时间"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etKeepTime"
                    android:textColorHint="@color/grey9"
                    android:hint="单位（小时）"
                    android:background="@null"
                    style="@style/textGrey9Style14"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="right|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="未成团自动取消订单时间"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etNoGroupTime"
                    android:textColorHint="@color/grey9"
                    android:hint="单位（小时）"
                    android:background="@null"
                    style="@style/textGrey9Style14"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="right|center_vertical" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="未提货自动取消订单时间"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etNoGetTime"
                    style="@style/textGrey9Style14"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_35"
                    android:gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="单位（小时）"
                    android:textColorHint="@color/grey9" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:visibility="gone"
                android:background="@color/greyD8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_20"
                android:gravity="center_vertical">

                <TextView
                    style="@style/textGrey3Style14"
                    android:text="未送货自动取消订单时间"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etNoSendTime"
                    style="@style/textGrey9Style14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="单位（小时）"
                    android:textColorHint="@color/grey9" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPublish"
                style="@style/textWhiteStyle14"
                android:background="@drawable/bg_orange"
                android:gravity="center"
                android:text="发布"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45" />

            <TextView
                android:id="@+id/tvPublishAgain"
                style="@style/textWhiteStyle14"
                android:background="@drawable/bg_orange"
                android:gravity="center"
                android:visibility="gone"
                android:text="再来一个团"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
