<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.superpeer.tutuyoudian.activity.verify.VerifyActivity">

    <include layout="@layout/base_title"/>

    <TextView
        style="@style/textGrey9Style14"
        android:text="方式一"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/iv_scan_verify"/>

    </LinearLayout>

    <TextView
        style="@style/textGrey9Style14"
        android:text="方式二"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/white">

        <cloudist.cc.library.view.PasswordInputView
            android:id="@+id/password_inputview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:borderRadius="1dp"
            app:borderWidth="0.5dp"
            app:itemHeight="45dp"
            app:itemPadding="10dp"
            android:maxLength="6"
            app:passwordLength="6"
            app:passwordWidth="6dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvVerify"
        style="@style/textWhiteStyle14"
        android:background="@drawable/bg_orange"
        android:gravity="center"
        android:text="验证"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45" />

</LinearLayout>
