<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.driver.userinfo.UserInfoActivity">

    <include layout="@layout/base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:text="注册账号"
            android:gravity="center_vertical"
            style="@style/textGrey3Style14"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"/>

        <TextView
            android:id="@+id/tvAccountNum"
            style="@style/textGrey9Style14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1">

        <TextView
            android:text="姓名"
            android:gravity="center_vertical"
            style="@style/textGrey3Style14"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"/>

        <TextView
            android:id="@+id/tvUserName"
            style="@style/textGrey9Style14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1">

        <TextView
            android:text="手机号"
            android:gravity="center_vertical"
            style="@style/textGrey3Style14"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"/>

        <TextView
            android:id="@+id/tvPhone"
            style="@style/textGrey9Style14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearQrCode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1">

        <TextView
            android:text="二维码"
            android:gravity="center_vertical"
            style="@style/textGrey3Style14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_45"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/iv_arrow"/>

    </LinearLayout>

</LinearLayout>